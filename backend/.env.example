# Database Configuration
# Path to the SQLite database file
DB_PATH=database.sqlite

# JWT Configuration
# Secret key for signing JWT tokens (use a strong, random string in production)
JWT_SECRET=your-super-secret-jwt-key-here

# Environment
# Set to 'production' for production environment, 'development' for development
NODE_ENV=development

# Server Configuration
# Port for the server to listen on
PORT=3000

SUPERVISOR_USERNAME=administrator
SUPERVISOR_PASSWORD=admin123
SUPERVISOR_EMAIL=email@mail.com