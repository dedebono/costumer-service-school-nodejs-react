# Root Environment Configuration
# Copy this file to .env and update the values for your environment

# This file contains common environment variables for the entire project
# Individual frontend and backend .env.example files contain more specific configurations

# Common URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000

# Development URLs (when running locally)
DEV_FRONTEND_URL=http://localhost:5173
DEV_BACKEND_URL=http://localhost:3001

# Production URLs (update these for your production environment)
PROD_FRONTEND_URL=https://your-frontend-domain.com
PROD_BACKEND_URL=https://your-backend-domain.com

# Database
DATABASE_URL=./database.sqlite

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Docker Compose Environment
COMPOSE_PROJECT_NAME=customer-service-school
